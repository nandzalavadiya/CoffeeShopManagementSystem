@model CustomerModel

<section class="section">
    <div class="row">
        <div class="col-lg">

            <div class="card">
                <div class="card-body pt-3">
                    <div class="row my-3">

                        <div class="col">
                            <form>
                                <input type="button" value="Go back!" onclick="history.back()">
                            </form>
                        </div>
                        <div class="col-10 text-center fs-6 fw-bold">Customer</div>
                    </div>
                    <form method="post" asp-controller="Customer" asp-action="CustomerSave">
                        <input type="hidden" asp-for="CustomerID" />
                        <div class="row mb-3 mt-4">
                            <label for="inpuText" class="col-sm-2 col-form-label"> Customer Name</label>
                            <div class="col-sm-10">
                                <input asp-for="CustomerName" type="text" class="form-control">
                                <span asp-validation-for="CustomerName" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inpuText" class="col-sm-2 col-form-label">Home Address</label>
                            <div class="col-sm-10">
                                <div class="form-floating">
                                    <textarea asp-for="HomeAddress" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                                    @* <label for="floatingTextarea2">Home Address</label> *@
                                    <span asp-validation-for="HomeAddress" class="form-text text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3 mt-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Email </label>
                            <div class="col-sm-10">
                                <input asp-for="Email" type="email" class="form-control">
                                <span asp-validation-for="Email" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Mobile No</label>
                            <div class="col-sm-10">
                                <input asp-for="MobileNo" maxlength="10" type="number" class="form-control">
                                <span asp-validation-for="MobileNo" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inpuText" class="col-sm-2 col-form-label">GST NO</label>
                            <div class="col-sm-10">
                                <input asp-for="GST_NO" type="text" class="form-control">
                                <span asp-validation-for="GST_NO" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inpuText" class="col-sm-2 col-form-label">City Name</label>
                            <div class="col-sm-10">
                                <input asp-for="CityName" type="text" class="form-control">
                                <span asp-validation-for="CityName" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inpuNumber" class="col-sm-2 col-form-label">Pincode</label>
                            <div class="col-sm-10">
                                <input asp-for="Pincode" type="number" class="form-control">
                                <span asp-validation-for="Pincode" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inpuNumber" class="col-sm-2 col-form-label">Net Amount</label>
                            <div class="col-sm-10">
                                <input asp-for="NetAmount" type="number" class="form-control">
                                <span asp-validation-for="NetAmount" class="form-text text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">User ID</label>
                            <div class="col-sm-10">
                                <select asp-for="UserID" class="form-select" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                    @* <option selected>select user id</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option> *@
                                    <option value="">Select User</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3 text-center">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit Form</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>

        </div>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
